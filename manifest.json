{
  "manifest_version": 2,
  "name": "AI Page Reader",
  "version": "1.0.0",
  "description": "Read web pages aloud with AI-powered summaries and Q&A using Gemini API",
  "icons": {
    "48": "assets/icons/icon-48.svg",
    "96": "assets/icons/icon-96.svg"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "assets/*"
  ]
}