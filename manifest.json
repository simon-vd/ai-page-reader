{
  "manifest_version": 2,
  "name": "AI Page Reader",
  "version": "1.0.0",
  "description": "Read web pages aloud with AI-powered summaries and Q&A using Gemini API",
  "icons": {
    "48": "assets/icons/icon-48.svg",
    "96": "assets/icons/icon-96.svg"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads",
    "<all_urls>"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icons/icon-48.svg"
    },
    "default_title": "AI Page Reader"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content/content.js"
      ],
      "css": [
        "content/content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    "assets/*",
    "popup/preview.html",
    "popup/preview.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "ai-page-reader@simon-vd.com",
      "data_collection_permissions": {
        "required": [
          "websiteContent"
        ],
        "data_collection": true,
        "data_collection_description": "This extension sends page content to Google's Gemini API to generate summaries and answer questions. The API key is stored locally in your browser. Page content is only transmitted when you explicitly request a summary or ask a question."
      }
    }
  }
}