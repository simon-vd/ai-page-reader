{
  "manifest_version": 2,
  "name": "AI Page Reader",
  "version": "1.0.0",
  "description": "Read web pages aloud with AI-powered summaries and Q&A using Gemini API",
  
  "icons": {
    "48": "assets/icons/icon-48.png",
    "96": "assets/icons/icon-96.png"
  },

  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>"
  ],

  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "assets/icons/icon-48.png"
    },
    "default_title": "AI Page Reader"
  },

  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_idle"
    }
  ],

  "options_ui": {
    "page": "settings/settings.html",
    "open_in_tab": true
  },

  "web_accessible_resources": [
    "assets/*"
  ]
}
